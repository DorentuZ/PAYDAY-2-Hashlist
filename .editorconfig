# This file is for unifying the coding style for different editors and IDEs as well as across teams.
# More information at http://EditorConfig.org

# Base Configuration
# ==================

# This is the top-most EditorConfig file
root = true

[*]
# Set default charset
charset = utf-8

# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true

# Tabs for indentation, spaces for alignment
# Indents use a tab width of 4 spaces
indent_style = tab
indent_size = 4

trim_trailing_whitespace = true


# Languages
# =========

[{*.lua,mod.txt}]
indent_style = space
indent_size = 4

# Markdown http://brettterpstra.com/2015/08/24/write-better-markdown/#indentation
[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
